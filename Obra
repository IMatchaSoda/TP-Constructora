using System;
using System.Collections;
namespace TP_Final
{
	public class Obra
	{
		private string tipodeobra,TEstimado;
		private int progreso,codigoObra;
		private double costo;
		private string nombreDeDuenio;
		private int dniDeDuenio;
		private Grupo_Obreros numgrupo;
		
		
		public Obra(string nombreDeDuenio,int dniDeDuenio,string Tipodeobra, string TEstimado,double costo,Grupo_Obreros numgrupo,int progreso)
		{
			this.tipodeobra=Tipodeobra;
			this.nombreDeDuenio=nombreDeDuenio;
			this.dniDeDuenio=dniDeDuenio;
			this.TEstimado=TEstimado;
			this.costo=costo;
			this.numgrupo=numgrupo;
			this.progreso=progreso;
		}
		public Obra(string nombreDeDuenio,int dniDeDuenio,string Tipodeobra, string TEstimado,double costo,int progreso)
		{
			this.tipodeobra=Tipodeobra;
			this.nombreDeDuenio=nombreDeDuenio;
			this.dniDeDuenio=dniDeDuenio;
			this.TEstimado=TEstimado;
			this.costo=costo;
			this.progreso=progreso;
			
		}
		public Obra(){
			
		}
		public string NombreDuenio{
			set{nombreDeDuenio=value;}get{return nombreDeDuenio;}
		}
		public int DniDuenio{
			set{dniDeDuenio=value;}get{return dniDeDuenio;}
		}
		public string Tipo_obra{
			set{tipodeobra=value;}
			get{return tipodeobra;}
		}
		public string Testimado{
			set{TEstimado= value;} get{return TEstimado;}
		}
		public int CodigoObra{
			set{codigoObra=value;} get{return codigoObra;}
		}
		public Grupo_Obreros Numgrupo{
			set{numgrupo= value;} get{return numgrupo;}
		}
		public int Progreso{
			set{progreso=value;} get{return progreso;}
		}
		
		
			public override string ToString()
		{
				
			return string.Format("Propietario:{0} -- Dni:{1} -- Tipo:{2} -- TiempoEstimado:{3} -- Costo:{4}usd -- Progreso:{5} -- NÂ°Grupo:{6}",nombreDeDuenio,dniDeDuenio,tipodeobra,TEstimado,costo,progreso,numgrupo.Numero);
		}
		
	}
}

