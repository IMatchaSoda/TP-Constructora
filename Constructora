using System;
using System.Collections;
namespace TP_Final
{
	
	public class Constructora
	{
		private string nombre;
		private ArrayList Obras;
        private ArrayList ObrasFinalizadas;
        public List<Obrero> Obreros { get; set; }
		
		public Constructora(){
			Obreros = new List<Obrero>();
			Obra=new List<Obra>();
		}
		public void AgregarObra(string nombreDeDuenio,int dniDeDuenio,string Tipodeobra,string TEEjecucion,double costo,int Grupo){
			Obra NuevaObra= new Obra(nombreDeDuenio,dniDeDuenio,Tipodeobra,TEEjecucion,costo,Grupo);
			Obra.Add(NuevaObra);
			Console.WriteLine("agregado exitosamente, perfectirigillo");
		}
        public void AgregarObrero(string nombre, string apellido, string dni, int nroLegajo, string cargo)
    {
        Obrero nuevoObrero = new Obrero(nombre, apellido, dni, nroLegajo, cargo);
        Obreros.Add(nuevoObrero);
        Console.WriteLine("Obrero agregado exitosamente.");
    }
	}
}