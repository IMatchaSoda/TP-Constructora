using System;
using System.Collections;
using System.Collections.Generic;
namespace TP_Final
{
	
	public class Constructora
	{
		//Atributos
        private string nombre;
        private Obra obra;
        private Grupo_Obreros grupo;
		private List<Obra> obras;
        private List<Obra> obrasFinalizadas;
        private List<Grupo_Obreros> lista_grupos;
		private Grupo_Obreros grupos;        
		
		//Constructor
        public Constructora(string nombre,Grupo_Obreros grupo){
			this.nombre=nombre;
			this.grupo=grupo;
            lista_grupos = new List<Grupo_Obreros>();
			obras=new List<Obra>();
            obrasFinalizadas= new List<Obra>();
            
		}
		public Constructora(){
			
		}
		public Constructora(Grupo_Obreros grupos){
			this.grupos=grupos;
		}
        //Metodos
        
        public Obra Obrass{
        	set{obra=value;}get{return obra;}
        }
        public List<Grupo_Obreros> Lista_grupos{
            get{return  lista_grupos;}
        }
        public Obra Obras{
            get{return Obras;}
        }
        public Obra ObrasFinalizadas{
            get{return ObrasFinalizadas;}
        }
        public Grupo_Obreros Grupo{
        	set{grupos=value;}get{return grupos;}
        }
        
		public void AgregarObra(string nombreDeDuenio,int dniDeDuenio,string Tipodeobra,string TEEjecucion,double costo){
			Obra NuevaObra= new Obra(nombreDeDuenio,dniDeDuenio,Tipodeobra,TEEjecucion,costo);
			obras.Add(NuevaObra);
			Console.WriteLine("agregado exitosamente, perfectirigillo");
		}
        public void AgregarObrero(string nombre, string apellido,string cargo, int dni, int nroLegajo)
    {
        if (grupo != null)
    {
        grupo.AgregarObrero(nombre, apellido, cargo, dni, nroLegajo,grupo);
        Console.WriteLine("Obrero agregado exitosamente.");
    }
    else
    {
        Console.WriteLine("Error: No se puede agregar el obrero. No se ha asignado un grupo.");
    }
        	
        
    }
        
 
        public void Mostrar_Obras(){
			foreach(Obra obra in obras){
				Console.WriteLine(obra);
			}
        }
    
	
