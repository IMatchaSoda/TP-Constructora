using System;
using System.Collections;
using System.Collections.Generic;
namespace TP_Final
{
	
	public class Obrero
	{
		private string nombre,apellido,cargo;
		private int dni,legajo,grupoid;
		private Grupo_Obreros grupo;
		public Obrero(string nombre,string apellido,string cargo,int dni,int legajo,int grupoid)
		{
			this.nombre=nombre;
            this.apellido=apellido;
			this.cargo=cargo;
			this.dni=dni;
			this.legajo=legajo;
			this.grupoid=grupoid;
			
		}
		public Obrero(string nombre,string apellido,string cargo,int dni,int legajo,Grupo_Obreros grupo)
		{
			this.nombre=nombre;
            this.apellido=apellido;
			this.cargo=cargo;
			this.dni=dni;
			this.legajo=legajo;
			this.grupo=grupo;
			
		}
		public Obrero(){
			
		}
		public Grupo_Obreros Grupo{
			set{grupo=value;}get{return grupo;}
		}
		public string Nombre{
            set {nombre=value;}
            get {return nombre;}
        }
        public string Apellido{
            set{apellido=value;}
            get{return apellido;}
        }
        public string Cargo{
            set{cargo=value;}
            get{return cargo;}
        }
        public int DNI{
            set{dni=value;}
            get{return dni;}
        }
        public int Legajo{
            set{legajo=value;}
            get{return legajo;}
        }
		public int Grupoid{
			set{grupoid=value;}get{return grupoid;}
		}
		public override string ToString()
		{
			return string.Format("nombre y apellido:{0},{1} dni:{2}	-- legajo: {3} -- cargo: {4} -- NÂ°Grupo: {5}",nombre, apellido, dni,legajo,cargo,grupoid);
		}

	}
}