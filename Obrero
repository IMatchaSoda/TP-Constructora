using System;
using System.Collections;
using System.Collections.Generic;
namespace TP_Final
{
	
	public class Obrero
	{
		private string nombre,apellido,cargo;
		private int dni,legajo;
		private Grupo_Obreros grupo;
		public Obrero(string nombre,string apellido,string cargo,int dni,int legajo)
		{
			this.nombre=nombre;
            this.apellido=apellido;
			this.cargo=cargo;
			this.dni=dni;
			this.legajo=legajo;
			
		}
		public Obrero(string nombre,string apellido,string cargo,int dni,int legajo,Grupo_Obreros grupo)
		{
			this.nombre=nombre;
            this.apellido=apellido;
			this.cargo=cargo;
			this.dni=dni;
			this.legajo=legajo;
			this.grupo=grupo;
			
		}
		public Obrero(){
			
		}
		public Grupo_Obreros Grupo{
			set{grupo=value;}get{return grupo;}
		}
		public string Nombre{
            set {nombre=value;}
            get {return nombre;}
        }
        public string Apellido{
            set{apellido=value;}
            get{return apellido;}
        }
        public string Cargo{
            set{cargo=value;}
            get{return cargo;}
        }
        public int DNI{
            set{dni=value;}
            get{return dni;}
        }
        public int Legajo{
            set{legajo=value;}
            get{return legajo;}
        }
		public override string ToString()
		{
			return string.Format("{0}	{1}	{2}	{3}	{4}	{5}",nombre, apellido, dni,legajo,cargo,grupo.Numero);
		}

	}
}