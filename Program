						break;
                    case "e":
					Console.Clear():
						
						break;
                    case "f":
					Console.Clear():
						
						break;
                    case "g":
					Console.Clear():
						
						break;
                    case "h":
					Console.Clear():

					 Thread.Sleep(2000);
						salir=true;
						break;
					 default:
                        Console.Clear();
                        Console.WriteLine("La opcion ingresada es inexistente, por favor trate de nuevo." + " " + "Espere a que reaparezca el menu.");
